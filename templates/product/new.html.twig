{% extends 'base.html.twig' %}

{% block title %}Ajouter un produit{% endblock %}

{% block content %}
<div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-white py-3 border-bottom">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-0 font-weight-bold">Ajouter un nouveau produit</h5>
                <p class="text-muted small mb-0">
                    <i class="bx bx-info-circle me-1"></i>
                    Remplissez les informations du nouveau produit
                </p>
            </div>
            <a href="{{ path('app_product_index') }}" class="btn btn-link text-muted p-0">
                <i class="bx bx-arrow-back me-1"></i> Retour à la liste
            </a>
        </div>
    </div>

    <div class="card-body px-4 py-4">
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

        {# Section Informations générales #}
        <div class="mb-4">
            <h6 class="text-primary d-flex align-items-center gap-2 mb-3">
                <i class="bx bx-info-circle"></i>
                Informations générales
            </h6>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.nom, 'Nom', {
                            'label_attr': {
                                'class': 'form-label fw-semibold'
                            }
                        }) }}
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bx bx-package text-muted"></i>
                            </span>
                            {{ form_widget(form.nom, {
                                'attr': {
                                    'class': 'form-control border-start-0 ps-0',
                                    'placeholder': 'Entrez le nom du produit'
                                }
                            }) }}
                        </div>
                        {{ form_errors(form.nom, {'attr': {'class': 'invalid-feedback d-block'}}) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.slug, 'Slug', {
                            'label_attr': {
                                'class': 'form-label fw-semibold'
                            }
                        }) }}
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bx bx-link text-muted"></i>
                            </span>
                            {{ form_widget(form.slug, {
                                'attr': {
                                    'class': 'form-control border-start-0 ps-0',
                                    'readonly': true
                                }
                            }) }}
                        </div>
                        {{ form_errors(form.slug, {'attr': {'class': 'invalid-feedback d-block'}}) }}
                    </div>
                </div>
            </div>
        </div>

        {# Section Prix et Stock #}
        <div class="mb-4">
            <h6 class="text-primary d-flex align-items-center gap-2 mb-3">
                <i class="bx bx-purchase-tag"></i>
                Prix et Stock
            </h6>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.prix, 'Prix', {
                            'label_attr': {
                                'class': 'form-label fw-semibold'
                            }
                        }) }}
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bx bx-euro text-muted"></i>
                            </span>
                            {{ form_widget(form.prix, {
                                'attr': {
                                    'class': 'form-control border-start-0 ps-0',
                                    'placeholder': 'Entrez le prix'
                                }
                            }) }}
                        </div>
                        {{ form_errors(form.prix, {'attr': {'class': 'invalid-feedback d-block'}}) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.quantity, 'Quantité', {
                            'label_attr': {
                                'class': 'form-label fw-semibold'
                            }
                        }) }}
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bx bx-box text-muted"></i>
                            </span>
                            {{ form_widget(form.quantity, {
                                'attr': {
                                    'class': 'form-control border-start-0 ps-0',
                                    'placeholder': 'Entrez la quantité'
                                }
                            }) }}
                        </div>
                        {{ form_errors(form.quantity, {'attr': {'class': 'invalid-feedback d-block'}}) }}
                    </div>
                </div>
            </div>
        </div>

        {# Section Descriptions #}
        <div class="mb-4">
            <h6 class="text-primary d-flex align-items-center gap-2 mb-3">
                <i class="bx bx-text"></i>
                Descriptions
            </h6>
            <div class="form-group mb-3">
                {{ form_label(form.short_description, 'Description courte', {
                    'label_attr': {
                        'class': 'form-label fw-semibold'
                    }
                }) }}
                {{ form_widget(form.short_description, {
                    'attr': {
                        'class': 'form-control',
                        'rows': 2,
                        'placeholder': 'Entrez une brève description'
                    }
                }) }}
                {{ form_errors(form.short_description, {'attr': {'class': 'invalid-feedback d-block'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.description, 'Description complète', {
                    'label_attr': {
                        'class': 'form-label fw-semibold'
                    }
                }) }}
                {{ form_widget(form.description, {
                    'attr': {
                        'class': 'form-control',
                        'rows': 4,
                        'placeholder': 'Entrez la description détaillée'
                    }
                }) }}
                {{ form_errors(form.description, {'attr': {'class': 'invalid-feedback d-block'}}) }}
            </div>
        </div>

        {# Section Image #}
        <div class="mb-4">
            <h6 class="text-primary d-flex align-items-center gap-2 mb-3">
                <i class="bx bx-image"></i>
                Image
            </h6>
            <div class="form-group">
                {{ form_widget(form.image, {
                    'attr': {
                        'class': 'form-control'
                    }
                }) }}
                {{ form_errors(form.image, {'attr': {'class': 'invalid-feedback d-block'}}) }}
            </div>
        </div>

        {# Section Catégorie #}
        <div class="mb-4">
            <h6 class="text-primary d-flex align-items-center gap-2 mb-3">
                <i class="bx bx-category"></i>
                Catégorie
            </h6>
            <div class="form-group">
                {{ form_widget(form.categorie, {
                    'attr': {
                        'class': 'form-select'
                    }
                }) }}
                {{ form_errors(form.categorie, {'attr': {'class': 'invalid-feedback d-block'}}) }}
                <small class="form-text text-muted">
                    <i class="bx bx-info-circle me-1"></i>
                    Sélectionnez la catégorie du produit
                </small>
            </div>
        </div>

        {# Boutons d'action #}
        <div class="d-flex gap-3 justify-content-end pt-3 border-top">
            <a href="{{ path('app_product_index') }}" class="btn btn-outline-secondary d-flex align-items-center gap-1">
                <i class="bx bx-x"></i>
                Annuler
            </a>
            <button type="submit" class="btn btn-primary d-flex align-items-center gap-1">
                <i class="bx bx-save"></i>
                Créer le produit
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}